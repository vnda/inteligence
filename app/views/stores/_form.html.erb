<%= form_for(resource) do |f| %>
  <%= render 'shared/error_messages' %>

  <fieldset>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :ga_token %><br>
      <%= f.text_field :ga_token, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :api_url %><br>
      <%= f.text_field :api_url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :user %><br>
      <%= f.text_field :user, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
    <p>
      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', :back, class: 'btn btn-default'  %>
    </p>
  </fieldset>
<% end %>
